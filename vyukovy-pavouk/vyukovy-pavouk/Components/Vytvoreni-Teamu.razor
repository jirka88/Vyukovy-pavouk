@using Microsoft.AspNetCore.Components.Forms
@inject HttpClient Http
@inject IGroupToken GroupToken
@inject IUserToken UserToken
@using vyukovy_pavouk.Data

<div class="container">
	<div class="main-box py-2 d-flex flex-column align-items-center">
		<!--vyskakovací okno pokud najde schodu názvu předmětu při vytváření nového předmětu -->
		@if(searchSubject != null) {	
			<fluent-dialog Hidden="@modelHidden2">

						 <div class="d-flex justify-content-center align-items-center h-100 w-100 flex-column">
						<svg fill="#000000" style="width: 30%" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M13.94 5 19 10.06 9.062 20a2.25 2.25 0 0 1-.999.58l-5.116 1.395a.75.75 0 0 1-.92-.921l1.395-5.116a2.25 2.25 0 0 1 .58-.999L13.938 5Zm7.09-2.03a3.578 3.578 0 0 1 0 5.06l-.97.97L15 3.94l.97-.97a3.578 3.578 0 0 1 5.06 0Z"/></svg>
					<h5 class="text-center pb-3 text-danger">Vytvořte nový název struktury</h5>
					<EditForm Model="@group.Subject" OnValidSubmit="@CreateIfExistRename">
						<FluentValidationValidator />
					<input type="text" class="mb-3" 
					@bind-value="@group.Subject.Name" @bind-value:event="oninput">
					<ValidationMessage class="text-center" For="@(()=>group.Subject.Name)" />
					<div class="pt-3">
						<fluent-button class="dialog-btn" @onclick="(() => modelHidden2 = true)">Zavřít</fluent-button>
						<fluent-button type="submit" appearance="accent" class="dialog-btn">Vytvořit</fluent-button>
					</div>
					</EditForm>
					</div>			
			  
			   </fluent-dialog>
			<fluent-dialog Hidden="@modelHidden">
			<div class="d-flex justify-content-center align-items-center h-100 w-100 flex-column">
				<h5 class="text-center">Struktura s názvem @searchSubject.Name už existuje. Zkuste jiný název!</h5>
				<?xml version="1.0" encoding="utf-8" ?>	
				<svg version="1.1" style="width: 40%" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 1000 1000" enable-background="new 0 0 1000 1000" xml:space="preserve">
				<metadata> Svg Vector Icons : http://www.onlinewebfonts.com/icon </metadata>
				<g><path d="M939.4,906.7H60.6c-31.7,0-50.6-25.9-50.6-50.9V144.2c0-31.9,25.8-50.9,50.6-50.9h878.7c31.7,0,50.6,25.9,50.6,50.9v711.7C990,887.7,964.3,906.7,939.4,906.7z M84.3,832h831.4V168H84.3V832z" /><path d="M327.8,405.9c-7.9,0-15.8-3-21.9-9.1l-80.5-81c-12.1-12.2-12.1-31.9,0-44c12.1-12.2,31.7-12.2,43.8,0l80.5,81c12.1,12.2,12.1,31.9,0,44C343.6,402.9,335.7,405.9,327.8,405.9z" /><path d="M247.3,405.9c-7.9,0-15.8-3-21.9-9.1c-12.1-12.2-12.1-31.9,0-44l80.5-81c12.1-12.2,31.7-12.2,43.8,0c12.1,12.2,12.1,31.9,0,44l-80.5,81C263.1,402.9,255.2,405.9,247.3,405.9z" /><path d="M752.7,406c-7.9,0-15.8-3-21.9-9.1l-80.5-81c-12.1-12.2-12.1-31.9,0-44c12.1-12.2,31.7-12.2,43.8,0l80.5,81c12.1,12.2,12.1,31.9,0,44C768.6,402.9,760.6,406,752.7,406z" /><path d="M672.2,405.9c-7.9,0-15.8-3-21.9-9.1c-12.1-12.2-12.1-31.9,0-44l80.5-81c12.1-12.2,31.7-12.2,43.8,0c12.1,12.2,12.1,31.9,0,44l-80.5,81C688.1,402.9,680.1,405.9,672.2,405.9z" /><path d="M772.4,711.1H227.6c-17.1,0-31-13.9-31-31.1c0-17.2,13.9-31.1,31-31.1h544.8c17.1,0,31,13.9,31,31.1C803.3,697.2,789.5,711.1,772.4,711.1z" /><path d="M542.1,711.1v58.7c0,0,0,42.2,61.9,42.2h66.6c0,0,61.9,0,61.9-42.2v-58.7H542.1z" /></g>
				</svg>
				<div>
					<fluent-button @onclick="CloseDialog" appearance="accent">Zavřít</fluent-button>
				</div>
			</div>
		</fluent-dialog>
		
	}
		<!--vytvoření nového předmětu -->
		<h1 class="py-5 text-center @(theme ? "text-white" : "")">Je potřeba vytvořit strukturu</h1>
		<EditForm Model="@subject" OnValidSubmit="@Create" class="editForm d-flex justify-content-center">
			 <FluentValidationValidator />
			<div class="card @(theme ? "darkTheme" : "")">
				<div class="card-body gap-4 @(theme ? "text-white darkInput" : "")">
					<h2 class="card-title text-center">Vytvořit novou strukturu</h2>
					<InputText id="nazev" type="text" placeholder="Název předmětu" @bind-Value="@subject.Name"></InputText>
					<ValidationMessage For="@(()=>subject.Name)" />
						<div class="d-flex flex-column align-items-center">
						<label for="private" class="fw-bold">Privátní</label>
						<FluentCheckbox id="private" @bind-Value="@subject.Private"></FluentCheckbox>
						</div>
					<fluent-button appearance="accent" type="submit" disabled="@(!context.IsModified() || !context.Validate())">Vytvořit</fluent-button>
				</div>
			</div>
		</EditForm>
		<!--Pokud nejsou vytvořené žádné předměty (navazují na ně i Teamy) tabulka se nevykreslí -->
		@if (subjects.Count() != 0)
		{
			if(!IfAllPrivate()) {
				<h2 class="py-4 @(theme ? "text-white" : "")">Nebo</h2>
				<EditForm Model="@group" OnValidSubmit="@CreateIfExist" class="editForm d-flex justify-content-center">
					<div class="card @(theme ? "darkTheme" : "")">
						<div class="card-body gap-4 @(theme ? "text-white darkInput" : "")">
							<h2 class="card-title pt-2 text-center">Použít existující strukturu</h2>
							<select @bind-Value="@subjectSelect" @bind-Value:event="onchange">
								@foreach (var item in subjects)
								{
									if (item.Private == false)
									{
										<option>@item.Name</option>
									}
									else
									{
										if (item.Created == UserToken.Profile.Mail)
										{
											<option>@item.Name</option>
										}
										
									}
								}
							</select>
							<fluent-button appearance="accent" Disabled="@offBtn" type="submit">Vytvořit</fluent-button>
						</div>
					</div>
				</EditForm>
			}
			
		}
	</div>
</div>
<style>
	.editForm {
    width: 70%;
}
	#nazev {
	width: 50%;
	}
	svg {
	width: 50%;
	}
	fluent-dialog {
		position: sticky;
		z-index: 999;
	}

	fluent-dialog fluent-button {
	width: 100px !important;
	height: 50px !important;
	}

	.validation-message {
		margin: -10px;
	}
</style>
@code {
	//parametr, který přijímá od Tab
	[Parameter]
	public List<Subject> subjects { get; set; }
	[Parameter]
	public bool theme { get; set; }
	[Inject]
	NavigationManager MyNavigationManager { get; set; }
	Subject searchSubject { get; set; } = new Subject();
	Subject controlSubject { get; set; } = new Subject();
	Group group = new Group() {Subject = new Subject()};
	Subject subject { get; set; } = new Subject {Group = new Group()};
	string subjectSelect;
	bool modelHidden = true;
	bool modelHidden2 = true;
	bool offBtn = false;
	protected override async Task OnAfterRenderAsync(bool firstRender)
	{
		await base.OnAfterRenderAsync(firstRender);
		if (firstRender)
		{
			if(subjects.Count() > 0) {
				subjectSelect = subjects[0].Name.ToString();
			}	 
			StateHasChanged();
		}

	}

	public async Task Create()
	{
		searchSubject = subjects.Find(x => x.Name.ToLower() == subject.Name.ToLower());
		if(searchSubject == null) {
			subject.Created = UserToken.Profile.Mail;
			subject.Group.TmGroup = (GroupToken.teamsContext.TeamId).ToString();
			//vytvoření nového předmětu se skupinou
			await Http.PostAsJsonAsync($"{MyNavigationManager.BaseUri}api/predmet", subject);
			//získání ID nově vytvořené skupiny
			Group GetGroup = await Http.GetFromJsonAsync<Group>($"{MyNavigationManager.BaseUri}api/Skupina/" + subject.Group.TmGroup);
			//vytvoření úvodní prerekvizity navazané na skupinu --> 0
			await CreateIntroductionCompletion(GetGroup);	
			MyNavigationManager.NavigateTo("/");
		}
		else {
			modelHidden = false;
		}

	}
	private async Task CreateIntroductionCompletion(Group group) {
		Completion completion = new Completion();
		completion.GroupID = group.Id;
		completion.ChapterID = 0;
		await Http.PostAsJsonAsync($"{MyNavigationManager.BaseUri}api/skupina/uvod", completion);
	}
	private async Task CreateIfExistRename() {
		controlSubject = subjects.Find(x => x.Name.ToLower() == group.Subject.Name.ToLower());
		if(controlSubject == null) {	
			//získání kapitol, které patří pod předmět 
			List<Chapter> chapters = await Http.GetFromJsonAsync<List<vyukovy_pavouk.Data.Chapter>>
					($"{MyNavigationManager.BaseUri}api/Kapitoly/vsechno/" + searchSubject.Id);
			//vytvoření skupiny s přejmenovanou kopií struktury 
			await Http.PostAsJsonAsync($"{MyNavigationManager.BaseUri}api/skupina", group);
			//získání ID nově vytvořené skupiny
			Group GetGroup = await Http.GetFromJsonAsync<Group>($"{MyNavigationManager.BaseUri}api/skupina/" + GroupToken.teamsContext.TeamId);
			//vytvoření úvodní prerekvizity navazané na skupinu --> 0
			await CreateIntroductionCompletion(GetGroup);

			foreach (Chapter chapter in chapters)
			{
				chapter.SubjectID = GetGroup.Subject.Id;
			}
			await Http.PostAsJsonAsync($"{MyNavigationManager.BaseUri}api/kapitoly/", chapters);
			MyNavigationManager.NavigateTo("/");
		}
		else {
			modelHidden = false;
		}
			
		
		
	}
	//překopíruje na novou skupinu existující předmět s kapitolami -->
	private async Task CreateIfExist() {
		//přidání ID skupiny 
		group.TmGroup = (GroupToken.teamsContext.TeamId).ToString();
		//získání ID předmětu, který si učitel vybral 
		searchSubject = subjects.Find(x => x.Name == subjectSelect);	
		//vlastnictví skupiny
		group.Subject.Created = UserToken.Profile.Mail;
		//viditelnost předmětu --> vždy defaultně nastaveno na privátní
		group.Subject.Private = true;
		group.Subject.Name = searchSubject.Name.ToString();
		//pokud předmět byl pouze resetovaný zpátky ho naváže 
		await Http.PostAsJsonAsync
		($"{MyNavigationManager.BaseUri}api/skupina/pripoj", group);
		//získání ID nově navázané skupiny --> pokud neexistuje musí se struktura (předmět) překopírovat 
		Group Getskupina = await Http.GetFromJsonAsync<Group>
		($"{MyNavigationManager.BaseUri}api/skupina/" + GroupToken.teamsContext.TeamId);

		if(Getskupina.TmGroup == null) {
		//přidání příjmení učitela za název předmětu
		group.Subject.Name = 
		$"{searchSubject.Name.ToString()} - {UserToken.Profile.Surname.ToString()}";
		modelHidden2 = false;
		}
		else {
		//vytvoří úvodní splnění pro navázanou skupinu s předmětem 
		await CreateIntroductionCompletion(Getskupina);
		MyNavigationManager.NavigateTo("/");
		}

	}
	public void CloseDialog() => modelHidden = true;
	private bool IfAllPrivate() {
		if(subjects.Where(x => x.Private == true 
			&& x.Created != UserToken.Profile.Mail).Count() != subjects.Count()) {
			return false;
		}
		return true;
	}
}
