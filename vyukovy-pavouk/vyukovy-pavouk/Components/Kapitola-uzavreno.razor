<div class="card locked d-grid" id="@ID">
	<div class="d-flex align-items-center justify-content-center main-body">
		<div class="icon px-4">
			<div class="circle red d-flex justify-content-center align-items-center">
				<svg width="24" height="24" fill="none" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 2a4 4 0 0 1 4 4v2h2.5A1.5 1.5 0 0 1 20 9.5v11a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 4 20.5v-11A1.5 1.5 0 0 1 5.5 8H8V6a4 4 0 0 1 4-4Zm0 11.5a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3ZM12 4a2 2 0 0 0-2 2v2h4V6a2 2 0 0 0-2-2Z" fill="#ffffff" /></svg>
			</div>
		</div>
		<div class="card-body">
			<div class="card-title">@Nazev</div>
			<p class="perex">@Perex</p>
			<div class="d-flex gap-2"><p class="status">Potřeba splnit: </p><a href="#1">Název Kapitoly</a></div>
		</div>
	</div>
</div>
<link rel="stylesheet" href="css/Main-Kapitoly.css" />
@code {
	[Parameter]
	public int ID { get; set; }

	[Parameter]
	public string Nazev { get; set; }

	[Parameter]
	public string Perex { get; set; }

}
